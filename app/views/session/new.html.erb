<h1>Hippopotamus Alert System</h1>

<div class="row">
	<div class="col-sm-4">
	</div>
	<div class="col-sm-4">
	<div class="jumbotron">
			<h3 class="text-center">Sign In</h3>
			<%= form_for(:session, url: login_path) do |f| %>

				<%= f.label :username %>
				<%= f.text_field :username, class: 'form-control input-sm chat-input' %>

				<%= f.label :password %>
				<%= f.password_field :password, class: 'form-control' %>
				
				<div class="wrapper">
					<span class="group-btn">
						<%= f.submit "Sign In", class: 'btn btn-primary btn-md', style: 'margin-top: 5%' %>
					</span>

				</div>
				<div class="wrapper">
					<span class="group-btn">
						<%= link_to "Sign Up", signup_url, class: 'btn btn-primary btn-md', style: 'margin-top: 5%' %>
					</span>
				</div>
			<% end %>
	</div>
</div>
	<div class="col-sm-4">
	</div>
</div>

